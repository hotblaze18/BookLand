{{> header}}
<body>
  {{#if message}}
    <div style="max-width: 70%;" class="alert alert-primary my-3 mx-auto">{{message.message}}</div>
  {{/if}}  
    {{{ body }}}
</body>
{{> footer}}
{{!-- tagin --}}
<script src="https://unpkg.com/tagin@2.0.2/dist/tagin.min.js"></script>
<script>
  const options = {
    separator: ',', // default: ','
    duplicate: false, // default: false
    enter: true, // default: false
    transform: 'input => input.toUpperCase()', // default: input => input
    placeholder: 'Add a group...' // default: ''
  }
  const eles = document.querySelector('.tagin');
  let tagin;
  if(eles) {
    tagin = new Tagin(document.querySelector('.tagin'), options);
  } 
</script>
</html>