<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="/images/book-pile.svg" class="img-fluid" style="width:450px;height:auto" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <h2 class="display-3">Sign up</h2>
        <form action="/auth/signup" method="POST">

          {{!-- Username input --}}
          <div class="form-outline mb-4">
            <input type="text" name="username" class="form-control form-control-lg" />
            <label class="form-label">Username</label>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <input type="email" name="email" class="form-control form-control-lg" />
            <label class="form-label">Email address</label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <input type="password" name="password" class="form-control form-control-lg" />
            <label class="form-label">Password</label>
          </div>
          <input type="hidden" name="role" value="user"/>
          <div class="text-secondary display-5 mb-3">Already have an account? <a class="" href="/auth/login">Login</a></div>

          <!-- Submit button -->
          <button type="submit" class="btn btn-primary btn-lg btn-block">Sign Up</button>

          {{!-- <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
          </div> --}}

          {{!-- <a class="btn btn-primary btn-lg btn-block" style="background-color: #3b5998" href="#!" role="button">
            <i class="fab fa-facebook-f me-2"></i>Continue with Facebook
          </a>
          <a class="btn btn-primary btn-lg btn-block" style="background-color: #55acee" href="#!" role="button">
            <i class="fab fa-twitter me-2"></i>Continue with Twitter</a> --}}

        </form>
      </div>
    </div>
  </div>
</section>